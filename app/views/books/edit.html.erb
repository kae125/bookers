<%= form_with(model: @book, url: books_path,local: :true) do |form| %>

<h1>Editing Book</h1>

<div class="form-group">
<%= form.label :title %><br>
<%= form.text_field :title %>
</div>

<div class="form-group">
<%= form.label :body %><br>
<%= form.text_area :body %>
</div>

<%= form.submit 'Update Book'%>
<% end %>


  
  <% if @selected_book %>
    <div class="book">
      <h2><%= @selected_book.title %></h2>
      <p><%= @selected_book.body %></p>
    </div>
  <% end %>
  </div>