<h1>投稿一覧</h1>


<%= form_with(model: @book, url: books_path,local: :true) do |form| %>
<%= form.text_field :title,placeholder: "タイトル" %>
<%= form.text_area :body,placeholder: "本文" %>
<%= form.submit '投稿'%>
<% end %>


  <% @book.each do |book| %>
  <div>
    <h2><%= book.title %></h2>
    <p><%= book.body %></p>
  </div>
  <% end %>
